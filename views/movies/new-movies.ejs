<h1>New Movie</h1>

<form action="/movies/create" method="POST">
    <label>Title: 
        <input type="text" name="title">
    </label>
    <label>Genre: 
        <input type="text" name="genre">
    </label>
    <label>Plot: 
        <input type="text" name="plot">
    </label>
    <select name="" id="">
        <% allCelebs.forEach(celeb => { %>
         <option value="<%- celeb._id %>"><%= celeb.name %></option>
        <% }) %>
    </select>
    <button type="submit">Create new movie</button>
</form>